<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/clothes_row_img"
                android:layout_width="560dp"
                android:layout_height="197dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/selectimage" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/clothe_row_name"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/clothe_row_type"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/clothe_row_color"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/clothe_row_pattern"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/clothe_row_date"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/clothe_row_price"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:text="TextView" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/clothes_row_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EdIt" />

        <Button
            android:id="@+id/clothes_row_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>